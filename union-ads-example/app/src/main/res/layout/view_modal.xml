<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_modal_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cancel" />

    <ImageView
        android:id="@+id/iv_modal_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/iv_modal_cancel"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_modal_title"
        style="@android:style/TextAppearance.Material.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_modal_image"
        android:layout_centerHorizontal="true"
        android:text="title" />

    <TextView
        android:id="@+id/tv_modal_content"
        style="@android:style/TextAppearance.Material.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_modal_title"
        android:layout_centerHorizontal="true"
        android:text="content" />

    <Button
        android:id="@+id/btn_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_modal_content"
        android:layout_centerHorizontal="true"
        android:text="чбошод" />

</RelativeLayout>